<% layout('/layouts/boilerplate.ejs') %>
<div class="row">
	<h1 class="text-center">Edit Campground</h1>
	<div class="col-md-6 offset-md-3">
		<form action="/campgrounds/<%=camp._id%>?_method=PATCH" enctype="multipart/form-data" method="POST" novalidate class="needs-validation">
			<div class="mb-3">
				<label class="form-label" for="title">Enter the new Name</label>
				<input class="form-control" type="text" name="campground[title]" id="title" value="<%=camp.title%>" required>
				<div class="valid-feedback">
					Looks good!
				</div>
				<div class="invalid-feedback">
					Please provide a valid Name.
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="location">Enter new Location</label>
				<input class="form-control" type="text" name="campground[location]" id="location" value="<%=camp.location%>" required>
				<div class="valid-feedback">
					Looks good!
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="image">Upload Images</label>
				<div class="input-group mb-3">
					<input type="file" class="form-control" id="image" name="image" multiple>
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="description">Description</label>
				<textarea class="form-control" type="text" name="campground[description]" id="description" required><%=camp.description%></textarea>
				<div class="valid-feedback">
					Looks good!
				</div>
			</div>
			<div class="mb-3">
				<label for="price">Campground Price</label>
				<div class="input-group mb-3">
					<span class="input-group-text">&#8377;</span>
					<input type="text" class="form-control" id="price" placeholder="0.00" name="campground[price]" value="<%=camp.price%>" required>
				</div>
			</div>
			<div class="mb-3">
                <% camp.images.forEach(function(img, i) {  %>

                <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                </div>
                <label for="image-<%=i%>">Delete?</label>
                <% })%>
            </div>
			<div class="my-3">
				<button class="btn btn-primary  text-light">Update</button>
			</div>
		</form>
		<a href="/campgrounds/<%=camp._id%>" class="btn btn-danger">Cancel</a>
	</div>
</div>

