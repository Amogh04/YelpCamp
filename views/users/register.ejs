<% layout('layouts/boilerplate.ejs') %>

<form action="/u/register" method="POST" class="needs-validation" novalidate>
    <div class="col-6 offset-3">
        <h1>Register</h1>
        <div class="mb-3">
		<label class="form-label" for="username">Username</label>
		<input class="form-control" type="text" name="user[username]" id="username" required>
		<div class="valid-feedback">
			Looks good!
		</div>
		<div class="invalid-feedback">
			Please provide a valid Username.
		</div>
	</div>
    <div class="mb-3">
		<label class="form-label" for="email">Email</label>
		<input class="form-control" type="email" name="user[email]" id="email" required>
		<div class="valid-feedback">
			Looks good!
		</div>
		<div class="invalid-feedback">
			Please provide a valid Email.
		</div>
	</div>
    <div class="mb-3">
		<label class="form-label" for="password">Password</label>
		<input class="form-control" type="password" name="user[password]" id="password" required minlength="8">
		<div class="valid-feedback">
			Looks good!
		</div>
		<div class="invalid-feedback">
			Please provide a valid Password.
		</div>
	</div>
    <div class="my-3">
		<button class="btn btn-success">Register</button>
	</div>
    </div>
</form>
