<% layout('layouts/boilerplate.ejs') %>

<div class="container-fluid d-flex justify-content-center align-items-center mb-5 w-75">
	<div class="row">
		<div class="col-md-6 offset-md-3">
			<div class="card shadow">
				<img crossorigin="anonymous" src="https://images.unsplash.com/photo-1476041800959-2f6bb412c8ce?q=80&w=870&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="LoginImage" class="card-img-top">
				<div class="card-body">
					<h2 class="card-title">Register</h2>
					<form action="/u/register" method="POST" id="registerForm" class="needs-validation" novalidate>
						<div class="mb-3">
							<label class="form-label" for="username">Username</label>
							<input autofocus class="form-control" type="text" name="user[username]" id="username" required>
							<div class="valid-feedback">
								Looks good!
							</div>
							<div class="invalid-feedback">
								Please provide a valid Username.
							</div>
						</div>
						<div class="mb-3">
							<label class="form-label" for="email">Email</label>
							<input class="form-control" type="email" name="user[email]" id="email" required>
							<div class="valid-feedback">
								Looks good!
							</div>
							<div class="invalid-feedback">
								Please provide a valid Email.
							</div>
						</div>
						<div class="mb-3">
							<label class="form-label" for="password">Password</label>
							<input class="form-control" type="password" name="user[password]" id="password" required minlength="8">
							<div class="valid-feedback">
								Looks good!
							</div>
							<div class="invalid-feedback">
								Please provide a valid Password.
							</div>
						</div>
						<div class="mt-3 d-grid">
							<button class="btn btn-success">Register</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
<%if(sendOTP){%>
	<script src="/scripts/registerForm.js"></script>
<%}%>

