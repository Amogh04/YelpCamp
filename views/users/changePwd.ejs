<% layout('layouts/boilerplate.ejs') %>

<div class="container-fluid d-flex justify-content-center align-items-center my-5 w-75">
	<div class="row">
            <h1 class="display-5 text-center">Your Username : <%=username%></h1>
		<div class="col-md-6 offset-md-3">
			<div class="card shadow">
				<img crossorigin="anonymous" src="https://images.unsplash.com/photo-1476041800959-2f6bb412c8ce?q=80&w=870&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="LoginImage" class="card-img-top">
				<div class="card-body">
					<h2 class="card-title">Make a new Password</h2>
					<form action="/u/updatePwd" method="POST" class="needs-validation" novalidate>
						<div class="mb-3">
							<label class="form-label" for="password"><b>Password</b></label>
							<input autofocus class="form-control" type="password" name="password" id="password" required>
							<div class="invalid-feedback">
								Please provide a valid Password
							</div>
						</div>
                        <div class="mb-3">
							<label class="form-label" for="otp">Enter the <b>OTP</b> sent to your Email:</label>
							<input class="form-control" type="otp" name="otp" id="otp" required>
						</div>
                        <div class="mt-3 d-grid">
							<button class="btn btn-success">Change</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>



