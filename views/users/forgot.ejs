<% layout('layouts/authCard.ejs') %>

<p class="card-title display-6 fs-3">Forgot Username / Password</p>
<form action="/u/forgot" method="POST" class="needs-validation" novalidate>
	<div class="mb-3">
		<label class="form-label" for="login">Enter your <b>Email or Username</b></label>
		<input autofocus class="form-control" type="text" name="login" id="login" required>
		<div class="invalid-feedback">
			Please provide a valid Email/Username
		</div>
	</div>
    <div class="mt-3 d-grid">
		<button class="btn btn-success">Submit</button>
	</div>
</form>

<%if(sendOTP){%>
	<script src="/scripts/forgotForm.js"></script>
<%}%>
  


